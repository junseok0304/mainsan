<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:gravity="center"
    tools:context=".MainActivity_realworld">  <!--.MainActivity_realworld java디렉토리의 액티비티와 대응되도록 변경할것  -->


    <TextView
        android:id="@+id/textView"
        android:layout_width="193dp"
        android:layout_height="56dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/gmarketbold"
        android:text="중고마켓"
        android:textColor="@color/black"
        android:textSize="47dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/metaHome"
        android:layout_width="83dp"
        android:layout_height="62dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="421dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.006"
        app:srcCompat="@drawable/ic_gasangbutton"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/realimage"
        android:layout_width="51dp"
        android:layout_height="43dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="360dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:minHeight="55dp"
        app:layout_constraintBottom_toBottomOf="@+id/metaHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/metaHome"
        app:layout_constraintTop_toTopOf="@+id/metaHome"
        app:layout_constraintVertical_bias="0.459"
        app:srcCompat="@drawable/ic_realmarketbutton" />

    <ImageView
        android:id="@+id/imageYellowbar"
        android:layout_width="51dp"
        android:layout_height="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/realimage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/realimage"
        app:layout_constraintTop_toTopOf="@+id/realimage"
        app:layout_constraintVertical_bias="0.034"
        app:srcCompat="@drawable/ic_baryellow" />

    <Space
        android:id="@+id/space"
        android:layout_width="542dp"
        android:layout_height="123dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="146dp"
        android:layout_height="58dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/gmarketbold"
        android:text="인기 월드"
        android:textColor="@color/black"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView24"
        app:layout_constraintVertical_bias="0.0" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="539dp"
        android:layout_height="291dp"
        android:layout_marginTop="30dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/realMarket"
                android:layout_width="540dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@null"
                app:srcCompat="@drawable/realmarketmenu1"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/realOffer"
                android:layout_width="480dp"
                android:layout_height="293dp"
                android:layout_gravity="top"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@null"
                app:srcCompat="@drawable/realworldoffer"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="480dp"
        android:layout_height="294dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/bottombanner2" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="480dp"
        android:layout_height="294dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.675"
        app:srcCompat="@drawable/bottombanner1" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="543dp"
        android:layout_height="132dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/homeworldpagebar" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="540dp"
        android:layout_height="18dp"
        android:layout_marginTop="38dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_bottomframe1" />


</androidx.constraintlayout.widget.ConstraintLayout>

